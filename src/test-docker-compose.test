version: '3.4'

services:
  discountdb:
    image: postgres
    # restart: always
    environment:
        - POSTGRES_USER=admin
        - POSTGRES_PASSWORD=admin123
        - POSTGRES_DB=DiscountDb
        # - POSTGRES_HOST_AUTH_METHOD=scram-sha-256
        - POSTGRES_INITDB_ARGS="--auth-host=scram-sha-256"
    ports:
        - "5432:5432"
    volumes:
        - postgres_data:/var/lib/postgresql/data/

volumes:
    postgres_data: